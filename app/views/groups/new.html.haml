%header.header
  .header__bar
    .header__bar__center
      %h1.header__bar__center__title
        = link_to 'Deep Sleep Sound', root_path, class: "header__bar__center__title--white"
      %p.header__bar__center__text
        Find your favorite sound here
.contents
  .group_new__wrapper
    = form_for @group do |f|
      .group_new__form
        .group_new__form__name
          .group_new__form__left
            = f.label :category
          .group_new__form__right
            = f.text_field :name, class: "group_new__form__right__field", placeholder: 'Type category name'
        .group_new__form__image
          .group_new__form__left
            = f.label :"Background Image"
          .group_new__form__right
            = f.text_field :image, class: "group_new__form__right__field", placeholder: 'Background Image URL'
        .group_new__form__submit
          = f.submit class: "group_new__form__submit__button"